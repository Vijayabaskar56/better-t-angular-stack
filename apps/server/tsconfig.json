{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "src",
		"rootDir": "./",
		"outDir": "./dist",
		"types": ["node"],
		"noPropertyAccessFromIndexSignature": false,
		"paths": {
			"@server/*": ["./*"],
		  },
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
